---
const interests = [
    "Bodega Industrial",
    "Bodega Semi-Industrial",
    "Oficinas Premium",
    "Locales Comerciales",
    "Lotes a Medida",
    "Otros Servicios",
];
const salesWhatsapp = "573102143000";
---

<section id="contacto" class="py-24 relative overflow-hidden">
    <div class="container mx-auto px-4 md:px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            {/* Columna Formulario */}
            <div class="relative">
                <div
                    class="absolute -top-20 -left-20 h-64 w-64 bg-(--sjp-primary)/5 rounded-full blur-3xl"
                >
                </div>

                <div
                    class="relative bg-white rounded-[2.5rem] border border-slate-100 p-8 md:p-12 shadow-[0_32px_64px_rgba(0,0,0,0.05)]"
                >
                    <form id="contact-form" class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                    >Nombre Completo</label
                                >
                                <input
                                    name="nombre"
                                    type="text"
                                    required
                                    class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none"
                                    placeholder="Juan Pérez"
                                />
                            </div>
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                    >Empresa</label
                                >
                                <input
                                    name="empresa"
                                    type="text"
                                    class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none"
                                    placeholder="Tu Empresa S.A.S"
                                />
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                    >Email Corporativo</label
                                >
                                <input
                                    name="email"
                                    type="email"
                                    required
                                    class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none"
                                    placeholder="juan@empresa.com"
                                />
                            </div>
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                    >Teléfono</label
                                >
                                <input
                                    name="telefono"
                                    type="tel"
                                    required
                                    class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none"
                                    placeholder="+57 300 000 0000"
                                />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                >Interés Principal</label
                            >
                            <select
                                name="interes"
                                class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none appearance-none cursor-pointer"
                            >
                                {
                                    interests.map((item) => (
                                        <option value={item}>{item}</option>
                                    ))
                                }
                            </select>
                        </div>

                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-black uppercase tracking-widest text-slate-500 ml-1"
                                >Mensaje</label
                            >
                            <textarea
                                name="mensaje"
                                rows="4"
                                class="w-full rounded-2xl border-2 border-slate-50 bg-slate-50 px-6 py-4 text-sm font-bold text-slate-900 transition-all focus:border-(--sjp-primary) focus:bg-white focus:outline-none resize-none"
                                placeholder="Cuéntanos más sobre tus necesidades logísticas..."
                            ></textarea>
                        </div>

                        <button
                            type="submit"
                            class="group relative w-full overflow-hidden rounded-2xl bg-slate-950 px-8 py-5 text-sm font-black uppercase tracking-widest text-white transition-all hover:scale-[1.02] active:scale-95 shadow-2xl"
                        >
                            <span class="relative z-10">Enviar Solicitud</span>
                            <div
                                class="absolute inset-0 bg-linear-to-r from-(--sjp-primary) to-(--sjp-primary-strong) opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                            >
                            </div>
                        </button>
                        <p id="contact-form-status" class="text-xs font-bold text-slate-500">Tu solicitud se enviar por WhatsApp al equipo comercial.</p>
                    </form>
                </div>
            </div>

            {/* Columna Info */}
            <div class="lg:pt-12">
                <h2
                    class="text-3xl font-black text-slate-900 uppercase tracking-tighter mb-8"
                >
                    Información de <br /><span class="italic text-slate-400"
                        >Atención Directa</span>
                </h2>

                <div class="space-y-8">
                    {
                        [
                            {
                                label: "Ventas & Arriendos",
                                info: "+57 (601) 827 9000",
                                sub: "Lunes a Viernes: 8am - 5pm",
                                link: "tel:+576018279000",
                            },
                            {
                                label: "Gestión Administrativa",
                                info: "administracion@sjp.co",
                                sub: "Respuestas en menos de 24h",
                                link: "mailto:administracion@sjp.co",
                            },
                            {
                                label: "Soporte Técnico",
                                info: "Ubicación Principal",
                                sub: "Mosquera, Cundinamarca - Autopista Medellín",
                                link: "#mapa",
                            },
                        ].map((item) => (
                            <a
                                href={item.link}
                                class="group flex items-start gap-6 p-6 rounded-3xl border border-transparent hover:border-slate-100 hover:bg-slate-50/50 transition-all no-underline"
                            >
                                <div class="h-12 w-12 rounded-2xl bg-slate-100 flex items-center justify-center text-(--sjp-primary) group-hover:bg-(--sjp-primary) group-hover:text-white transition-all">
                                    <svg
                                        class="h-6 w-6"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                        />
                                    </svg>
                                </div>
                                <div>
                                    <span class="text-[10px] font-black uppercase tracking-widest text-slate-400 block mb-1">
                                        {item.label}
                                    </span>
                                    <p class="text-xl font-black text-slate-950 mb-1">
                                        {item.info}
                                    </p>
                                    <p class="text-sm text-slate-500 font-medium">
                                        {item.sub}
                                    </p>
                                </div>
                            </a>
                        ))
                    }
                </div>

                <div
                    class="mt-12 p-8 rounded-[2rem] bg-(--sjp-primary-soft) border border-(--sjp-primary)/10"
                >
                    <p
                        class="text-sm font-bold text-(--sjp-primary-strong) leading-relaxed"
                    >
                        Estamos ubicados estratégicamente para conectar tu
                        negocio con las principales rutas del país. Visítanos en
                        nuestra sede administrativa para una asesoría
                        personalizada.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>



<script define:vars={{ salesWhatsapp }}>
  const contactForm = document.getElementById("contact-form") as HTMLFormElement | null;
  const statusLabel = document.getElementById("contact-form-status");

  if (contactForm) {
    contactForm.addEventListener("submit", (event) => {
      event.preventDefault();

      const formData = new FormData(contactForm);
      const nombre = String(formData.get("nombre") || "").trim();
      const empresa = String(formData.get("empresa") || "").trim();
      const email = String(formData.get("email") || "").trim();
      const telefono = String(formData.get("telefono") || "").trim();
      const interes = String(formData.get("interes") || "").trim();
      const mensaje = String(formData.get("mensaje") || "").trim();

      const lines = [
        "Hola, quiero informacion del Parque Industrial San Jorge.",
        `Nombre: ${nombre}`,
        `Empresa: ${empresa || "No indicada"}`,
        `Email: ${email}`,
        `Telefono: ${telefono}`,
        `Interes: ${interes || "No indicado"}`,
        `Mensaje: ${mensaje || "Sin mensaje adicional"}`,
      ];

      const whatsappUrl = `https://wa.me/${salesWhatsapp}?text=${encodeURIComponent(lines.join("\n"))}`;
      window.open(whatsappUrl, "_blank", "noopener,noreferrer");

      if (statusLabel) {
        statusLabel.textContent = "Solicitud preparada. Se abrio WhatsApp para finalizar el envio.";
      }
    });
  }
</script>

