---
const partners = [
    { name: "Empresa Líder 1", type: "Logística" },
    { name: "Empresa Líder 2", type: "Manufactura" },
    { name: "Empresa Líder 3", type: "Comercio" },
    { name: "Empresa Líder 4", type: "Tecnología" },
    { name: "Empresa Líder 5", type: "Servicios" },
    { name: "Empresa Líder 6", type: "Industria" },
];
---

<section class="border-y border-(--sjp-border) bg-white py-16">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
        <div
            class="flex flex-col items-center gap-12 lg:flex-row lg:justify-between"
        >
            <div class="max-w-xs text-center lg:text-left">
                <h3
                    class="text-sm font-black uppercase tracking-[0.2em] text-slate-900 dark:text-white"
                >
                    Aliados Estratégicos
                </h3>
                <p
                    class="mt-2 text-xs font-bold text-slate-500 dark:text-slate-400"
                >
                    Empresas que confían en nuestra infraestructura para crecer.
                </p>
            </div>

            <div
                class="grid grid-cols-2 gap-8 gap-y-12 sm:grid-cols-3 lg:flex lg:flex-1 lg:items-center lg:justify-around"
            >
                {
                    partners.map((partner) => (
                        <div class="group flex flex-col items-center justify-center grayscale transition-all hover:grayscale-0">
                            <div class="h-12 w-32 rounded-xl bg-slate-50 flex items-center justify-center border border-slate-100 group-hover:border-red-500/20 group-hover:bg-rose-50/50 transition-all p-4">
                                <span class="text-[10px] font-black uppercase tracking-wider text-slate-400 group-hover:text-red-700">
                                    {partner.name}
                                </span>
                            </div>
                            <span class="mt-2 text-[8px] font-bold uppercase tracking-widest text-slate-400 group-hover:text-slate-600">
                                {partner.type}
                            </span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
