<section id="mapa" class="pb-24">
    <div class="container mx-auto px-4 md:px-6">
        <div
            class="relative overflow-hidden rounded-[3rem] bg-slate-900 border border-slate-800 shadow-3xl h-[600px] group"
        >
            <div class="absolute left-6 top-6 z-30 inline-flex rounded-xl border border-white/15 bg-slate-900/70 p-1 backdrop-blur-md">
                <button
                    id="map-mode-google"
                    type="button"
                    class="rounded-lg bg-white px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-slate-900 transition-colors"
                >
                    Google Maps
                </button>
                <button
                    id="map-mode-interactive"
                    type="button"
                    class="rounded-lg px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-white/80 transition-colors hover:text-white"
                >
                    Mapa Interactivo
                </button>
            </div>

            {/* Vista por defecto: Google Maps */}
            <iframe
                id="google-map-frame"
                title="Mapa Parque Industrial San Jorge"
                src="https://www.google.com/maps?q=PQ75%2BQ8+Mosquera,+Cundinamarca&z=15&output=embed"
                class="absolute inset-0 h-full w-full z-0"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            ></iframe>

            {/* Vista alternativa: Google Maps satelital (interactivo) */}
            <iframe
                id="interactive-map-layer"
                title="Mapa Interactivo Satelital San Jorge"
                src="https://www.google.com/maps?q=PQ75%2BQ8+Mosquera,+Cundinamarca&z=17&t=k&output=embed"
                class="absolute inset-0 h-full w-full z-0 hidden"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            ></iframe>

            {/* Overlay Gradiente Noir para profundidad */}
            <div
                class="absolute inset-0 bg-linear-to-t from-slate-950/90 via-slate-950/20 to-transparent pointer-events-none"
            >
            </div>

            {
                /* Tarjeta de Ubicación Flotante - Ubicada a la derecha para no tapar Colombia en la madera */
            }
            <div
                class="absolute bottom-12 left-4 right-4 md:left-auto md:right-12 md:w-96 bg-slate-900/60 backdrop-blur-3xl p-8 rounded-4xl border border-white/10 z-20 shadow-2xl"
            >
                <h4
                    class="text-2xl font-black text-white uppercase tracking-tighter mb-4"
                >
                    Sede Mosquera
                </h4>
                <div class="space-y-4">
                    <div class="flex items-start gap-4">
                        <svg
                            class="h-6 w-6 text-(--sjp-primary) shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <p
                            class="text-slate-200 font-bold text-sm leading-relaxed"
                        >
                            Kilómetro 1.5 Vía Mosquera - La Mesa, Sector
                            Casablanca. <br />
                            <span
                                class="text-(--sjp-primary) font-black tracking-wider"
                                >PQ75+Q8 Mosquera</span
                            >
                        </p>
                    </div>
                    <div class="flex items-start gap-4">
                        <svg
                            class="h-6 w-6 text-(--sjp-primary) shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <p class="text-slate-200 font-medium text-sm">
                            Lun - Vie: 08:00 AM - 05:00 PM <br />Sáb: 08:00 AM -
                            12:00 PM
                        </p>
                    </div>
                </div>

                <a
                    href="https://www.google.com/maps/search/PQ75%2BQ8+Mosquera"
                    target="_blank"
                    class="mt-8 flex items-center justify-center gap-2 w-full py-4 bg-white text-slate-950 font-black uppercase tracking-widest text-xs rounded-xl hover:bg-(--sjp-primary) hover:text-white transition-all no-underline shadow-lg"
                >
                    Abrir en Google Maps
                    <svg
                        class="h-4 w-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    const setupMapModeToggle = () => {
        const googleBtn = document.getElementById("map-mode-google");
        const interactiveBtn = document.getElementById("map-mode-interactive");
        const googleFrame = document.getElementById("google-map-frame");
        const interactiveLayer = document.getElementById("interactive-map-layer");

        if (!googleBtn || !interactiveBtn || !googleFrame || !interactiveLayer) return;
        if ((googleBtn as HTMLButtonElement).dataset.bound === "true") return;
        (googleBtn as HTMLButtonElement).dataset.bound = "true";

        const setMode = (mode: "google" | "interactive") => {
            const isGoogle = mode === "google";
            googleFrame.classList.toggle("hidden", !isGoogle);
            interactiveLayer.classList.toggle("hidden", isGoogle);

            googleBtn.className = isGoogle
                ? "rounded-lg bg-white px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-slate-900 transition-colors"
                : "rounded-lg px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-white/80 transition-colors hover:text-white";

            interactiveBtn.className = !isGoogle
                ? "rounded-lg bg-white px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-slate-900 transition-colors"
                : "rounded-lg px-3 py-1.5 text-[10px] font-black uppercase tracking-widest text-white/80 transition-colors hover:text-white";
        };

        googleBtn.addEventListener("click", () => setMode("google"));
        interactiveBtn.addEventListener("click", () => setMode("interactive"));
        setMode("google");
    };

    setupMapModeToggle();
    document.addEventListener("astro:after-swap", setupMapModeToggle);
</script>
