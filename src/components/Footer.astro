            },
          ].map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-400 transition-all hover:text-(--sjp-primary) hover:scale-125"
              aria-label={social.icon}
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.path} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

