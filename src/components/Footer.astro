---
export interface Props {
  company?: {
    name: string;
    description: string;
  };
  whatsappNumber?: string;
  email?: string;
  phone?: string;
  location?: string;
}

const {
  company = {
    name: "Parque Industrial San Jorge",
    description: "Terminal Metropolitano de Carga",
  },
  whatsappNumber = "573000000000",
  email = "info@sanjorgepi.com",
  phone = "+57 1 XXXX XXXX",
  location = "PQ75+Q8 Mosquera, Cundinamarca",
} = Astro.props;
---

<footer class="bg-slate-900 text-white pt-24 pb-12">
  <div class="mx-auto max-w-7xl px-4 py-20 md:px-6">
    {/* Grid principal */}
    <div class="grid gap-16 md:grid-cols-2 lg:grid-cols-4">
      {/* Columna 1: Empresa */}
      <div class="animate-fade-in-up">
        <div class="mb-6 flex items-center gap-3">
          <img
            src="/logo.png"
            alt="San Jorge PI"
            class="h-10 w-10 rounded-xl shadow-sm"
          />
          <div class="flex flex-col">
            <span
              class="font-black text-base text-white uppercase tracking-tight"
              >{company.name}</span
            >
            <p
              class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400"
            >
              {company.description}
            </p>
          </div>
        </div>
        <div class="space-y-2 mt-4">
          <p class="text-sm font-bold text-white/40">Fundado: 2009</p>
          <p class="text-sm font-bold text-white/40">
            {location}
          </p>
        </div>
      </div>

      {/* Columna 2: Espacios */}
      <div>
        <h3
          class="mb-8 font-black uppercase tracking-widest text-xs text-white/40"
        >
          Espacios Disponibles
        </h3>
        <nav class="space-y-4">
          {
            [
              "Oficinas",
              "Bodegas Semi-Industrial",
              "Bodegas Industrial",
              "Locales Comerciales",
              "Lotes a Medida",
            ].map((item) => (
              <a
                href="/#inmuebles"
                class="block text-sm font-bold text-slate-500 transition-all hover:text-black hover:translate-x-1"
              >
                {item}
              </a>
            ))
          }
        </nav>
      </div>

      {/* Columna 3: Servicios */}
      <div>
        <h3
          class="mb-8 font-black uppercase tracking-widest text-xs text-white/40"
        >
          Servicios
        </h3>
        <nav class="space-y-4">
          {
            [
              "Plazoleta de Comidas",
              "Hotel Empresarial",
              "Estación de Servicio",
              "Centros de Convenciones",
              "Báscula Camionera",
            ].map((item) => (
              <a
                href="/#servicios"
                class="block text-sm font-bold text-slate-500 transition-all hover:text-black hover:translate-x-1"
              >
                {item}
              </a>
            ))
          }
        </nav>
      </div>

      {/* Columna 4: Contacto */}
      <div>
        <h3
          class="mb-8 font-black uppercase tracking-widest text-xs text-white/40"
        >
          Contacto
        </h3>
        <div class="space-y-4">
          <a
            href={`mailto:${email}`}
            class="block text-sm font-bold text-white/60 transition hover:text-white"
          >
            {email}
          </a>
          <a
            href={`tel:${phone.replace(/\s/g, "")}`}
            class="block text-sm font-bold text-white/60 transition hover:text-white"
          >
            {phone}
          </a>
          <div
            class="mt-12 flex flex-col md:flex-row items-center justify-between gap-8 pt-12 border-t border-white/5"
          >
            <div
              class="flex items-center gap-4 text-xs font-bold text-white/40"
            >
              <span>Contacts</span>
              <span>Enlaces Rep.</span>
              <span>Expositores</span>
            </div>

                        <a
              href="/contacto"
              class="group flex items-center gap-4 rounded-xl bg-(--sjp-primary) px-12 py-4 text-sm font-black text-white shadow-2xl transition-all hover:scale-105 no-underline"
            >
              <span class="tracking-widest uppercase">Solicitar Enlace PSE</span>
              <span class="rounded-md border border-white/40 px-2 py-1 text-[10px]">PSE</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    {/* Divisor Minimal */}
    <div class="my-16 border-t border-slate-100 opacity-50"></div>

    {/* Copyright */}
    <div class="flex flex-col items-center justify-between gap-8 md:flex-row">
      <p class="text-xs font-bold text-white/20">
        &copy; 2009-2026 <span class="text-white/40">{company.name}</span>.
      </p>

      {/* Redes sociales - Escala de grises Premium */}
      <div class="flex items-center gap-8">
        {
          [
            {
              icon: "Facebook",
              href: "#",
              path: "M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z",
            },
            {
